//1.1
public class Program 
{
	public static void main(String[] args)
	{
		System.out.println(remainder(1, 3));
		System.out.println(remainder(3, 4));
		System.out.println(remainder(-9, 45));
		System.out.println(remainder(5, 5));
	}
	
	// Возвращает остаток от деления числа a на число b
	public static int remainder(int a, int b)
	{
		return a % b;
	}
}


//2.1
public class Program 
{
	public static void main(String[] args)
	{
		System.out.println(triArea(3, 2));
		System.out.println(triArea(7, 4));
		System.out.println(triArea(10, 10));
	}
	
	public static double triArea(double s, double h) 
	{
		return 0.5 * s * h;
	}
}


//3.1
public class Program 
{
	public static void main(String[] args)
	{
		System.out.println(animals(2, 3, 5));
		System.out.println(animals(1, 2, 3));
		System.out.println(animals(5, 2, 8));
	}
	
	// Считает ноги животных
	public static int animals(int chickens, int cows, int pigs) 
	{
		return chickens * 2 + cows * 4 + pigs * 4;
	}
}


//4.1
public class Program 
{
	public static void main(String[] args)
	{
		System.out.println(profitableGamble(0.2, 50, 9));
		System.out.println(profitableGamble(0.9, 1, 2));
		System.out.println(profitableGamble(0.9, 3, 2));
	}
	
	// Считает ноги животных
	public static boolean profitableGamble(double prob, double prize, double pay) 
	{
		if(prob * prize > pay)
			return true;
		else
			return false;
	}
}


//5.1
public class Program 
{
	public static void main(String[] args)
	{
		System.out.println(operation(24, 15, 9));
		System.out.println(operation(24, 26, 2));
		System.out.println(operation(15, 11, 11));
	}
	
	// Если (prob * prize > pay), то возвращает true, иначе false
	public static String operation(double N, double a, double b) 
	{
		if(a + b == N)
			return "added";
		else if(a - b == N)
			return "substracted";
		else if(a * b == N)
			return "multiplyed";
		else if(a / b == N)
			return "divided";
		else
			return "none";
	}
}


//6.1
public class Program 
{
	public static void main(String[] args)
	{
		System.out.println(ctoa('A'));
		System.out.println(ctoa('m'));
		System.out.println(ctoa('['));
		System.out.println(ctoa('\\'));
	}
	
	public static int ctoa(char a) 
	{
		return (int)a;
	}
}


//7.1
public class Program 
{
	public static void main(String[] args)
	{
		System.out.println(addUpTo(3));
		System.out.println(addUpTo(10));
		System.out.println(addUpTo(7));
	}
	
	// Складывает все числа до числа 'a', включая его
	public static int addUpTo(int a) 
	{
		int result = 0;
		
		for(int i = 1; i <= a; ++i)
			result += i;
		
		return result;
	}
}


//8.1
public class Program 
{
	public static void main(String[] args) 
	{
		System.out.println(nextEdge(8, 10));
		System.out.println(nextEdge(5, 7));
		System.out.println(nextEdge(9, 2));
	}
	
	public static int nextEdge(int a, int b) 
	{
		return a + b - 1;
	}
}


//9.1
public class Program 
{
	public static void main(String[] args)
	{
		int[] arr1 = {1, 5, 9};
		int[] arr2 = {3, 4, 5};
		int[] arr3 = {2};
		int[] arr4 = {};
		
		System.out.println(sumOfCubes(arr1));
		System.out.println(sumOfCubes(arr2));
		System.out.println(sumOfCubes(arr3));
		System.out.println(sumOfCubes(arr4));
	}
	
	// Возвращает сумму кубов массива чисел
	public static int sumOfCubes(int[] arr) 
	{
		int result = 0;
		
		for(int i = 0; i < arr.length; ++i)
			result += arr[i] * arr[i] * arr[i];
		
		return result;
	}
}


//10.1
public class Program 
{
	public static void main(String[] args)
	{
		System.out.println(abcmath(42, 5, 10));
		System.out.println(abcmath(5, 2, 1));
		System.out.println(abcmath(1, 2, 3));
	}
	
	// Возвращает сумму кубов массива чисел
	public static boolean abcmath(int a, int b, int c) 
	{
		int sum = a;
		
		for(int i = 0; i < b; ++i)
			sum += sum;
		
		if(sum % c == 0)
			return true;
		else
			return false;
	}
}
